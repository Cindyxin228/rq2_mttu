owing_url": "https://api.github.com/users/milleniumbug/following{/other_user}", "gists_url": "https://api.github.com/users/milleniumbug/gists{/gist_id}", "starred_url": "https://api.github.com/users/milleniumbug/starred{/owner}{/repo}", "subscriptions_url": "https://api.github.com/users/milleniumbug/subscriptions", "organizations_url": "https://api.github.com/users/milleniumbug/orgs", "repos_url": "https://api.github.com/users/milleniumbug/repos", "events_url": "https://api.github.com/users/milleniumbug/events{/privacy}", "received_events_url": "https://api.github.com/users/milleniumbug/received_events", "type": "User", "user_view_type": "public", "site_admin": false}, "labels": [], "state": "closed", "locked": false, "assignee": null, "assignees": [], "milestone": null, "comments": 1, "created_at": "2019-09-18T09:40:29Z", "updated_at": "2019-09-21T23:24:15Z", "closed_at": "2019-09-21T23:24:15Z", "author_association": "CONTRIBUTOR", "type": null, "active_lock_reason": null, "draft": false, "pull_request": {"url": "https://api.github.com/repos/pact-foundation/pact-reference/pulls/45", "html_url": "https://github.com/pact-foundation/pact-reference/pull/45", "diff_url": "https://github.com/pact-foundation/pact-reference/pull/45.diff", "patch_url": "https://github.com/pact-foundation/pact-reference/pull/45.patch", "merged_at": "2019-09-21T23:24:15Z"}, "body": "Currently Rust reference library only allows for listening on 0.0.0.0 (Any). PactNet allows for listening on 0.0.0.0 (Any) and 127.0.0.1 (Localhost), but there's no technical reason to not allow listening on specific interface, and possibly on IPv6 addresses too. So I extended for listening on arbitrary IP addresses.", "reactions": {"url": "https://api.github.com/repos/pact-foundation/pact-reference/issues/45/reactions", "total_count": 0, "+1": 0, "-1": 0, "laugh": 0, "hooray": 0, "confused": 0, "heart": 0, "rocket": 0, "eyes": 0}, "timeline_url": "https://api.github.com/repos/pact-foundation/pact-reference/issues